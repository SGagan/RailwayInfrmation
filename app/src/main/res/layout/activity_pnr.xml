<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBack"
    tools:context="com.example.gagan.railway.PnrStatusActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="25dp"
        android:layout_margin="25dp"
        android:elevation="60dp"

        >


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            tools:context="com.example.gagan.railway.Display"
            android:elevation="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pnr Code: "
                android:layout_margin="8dp"
                android:id="@+id/pnr"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/pnr"
                android:layout_toRightOf="@+id/pnr"
                android:id="@+id/txtPnrCode"
                android:hint="pnr"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/pnr"
                android:text="Journey Date: "
                android:id="@+id/jDate"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/jDate"
                android:layout_toRightOf="@+id/jDate"
                android:layout_below="@+id/pnr"
                android:id="@+id/txtDoj"
                android:hint="j date"
                android:textStyle="bold"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/jDate"
                android:text="Total Passengers: "
                android:id="@+id/Passengers"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/Passengers"
                android:layout_toRightOf="@+id/Passengers"
                android:id="@+id/txtTotalPassengers"
                android:layout_below="@+id/jDate"
                android:hint="count"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/txtTotalPassengers"
                android:text="Chart Prepared: "
                android:id="@+id/ChartPrepared"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/ChartPrepared"
                android:layout_toRightOf="@+id/ChartPrepared"
                android:id="@+id/txtChartPrepared"
                android:layout_below="@+id/txtTotalPassengers"
                android:hint="Chart"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/ChartPrepared"
                android:text="From: "
                android:id="@+id/FromStation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/FromStation"
                android:layout_toRightOf="@+id/FromStation"
                android:layout_margin="8dp"
                android:layout_below="@+id/ChartPrepared"
                android:id="@+id/txtFromStation"
                android:hint="From"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/FromStation"
                android:text="To Station: "
                android:id="@+id/ToStation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/FromStation"
                android:layout_toEndOf="@+id/ToStation"
                android:layout_toRightOf="@+id/ToStation"
                android:id="@+id/txtToStation"
                android:hint="to"
                android:textStyle="bold"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/ToStation"
                android:text="Boarding Point: "
                android:id="@+id/BoardingPoint"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/BoardingPoint"
                android:layout_toRightOf="@+id/BoardingPoint"
                android:layout_below="@+id/ToStation"
                android:layout_margin="8dp"
                android:id="@+id/txtBoardingPoint"
                android:hint="B P"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Upto: "
                android:layout_margin="8dp"
                android:layout_below="@+id/BoardingPoint"
                android:id="@+id/ReservationUpto"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtReservationUpto"
                android:layout_margin="8dp"
                android:layout_below="@+id/BoardingPoint"
                android:layout_toEndOf="@+id/ReservationUpto"
                android:layout_toRightOf="@+id/ReservationUpto"
                android:hint="R U"
                android:textStyle="bold"
                android:textSize="20dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/ReservationUpto"
                android:text="Train Name: "
                android:id="@+id/tName"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tName"
                android:layout_toRightOf="@+id/tName"
                android:layout_below="@+id/ReservationUpto"
                android:layout_margin="8dp"
                android:id="@+id/txtTrain"
                android:hint="T Name"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Number: "
                android:layout_margin="8dp"
                android:layout_below="@+id/tName"
                android:id="@+id/tCode"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTrainCode"
                android:layout_margin="8dp"
                android:layout_below="@+id/tName"
                android:layout_toEndOf="@+id/tCode"
                android:layout_toRightOf="@+id/tCode"
                android:hint="t code"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/txtTrainCode"
                android:text="Journey Class: "
                android:id="@+id/JourneyClass"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/JourneyClass"
                android:layout_toRightOf="@+id/JourneyClass"
                android:layout_below="@+id/txtTrainCode"
                android:layout_margin="8dp"
                android:id="@+id/txtJourneyClass"
                android:paddingLeft="10dp"
                android:hint="Journey Class"
                android:textStyle="bold"
                android:textSize="20dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>