<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBack"
    tools:context="com.example.gagan.railway.TrainRouteActivity">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="60dp"
    card_view:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="60dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtTcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Train Name: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trainCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/txtTcode"
            android:layout_toRightOf="@+id/txtTcode"
            android:hint="t name"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/txtScode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTcode"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Station code: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTcode"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtScode"
            android:layout_toRightOf="@+id/txtScode"
            android:hint="station code"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtSname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtScode"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Station Name: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtScode"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/txtSname"
            android:layout_toRightOf="@+id/txtSname"
            android:hint="station name"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/txtArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSname"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Arrival: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSname"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/txtArrival"
            android:layout_toRightOf="@+id/txtArrival"
            android:hint="arrival"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtArrival"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Departure: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schdep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SChar"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/txtDept"
            android:layout_toRightOf="@+id/txtDept"
            android:hint="Departure"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtHalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDept"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Halt: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/halt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schdep"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/txtHalt"
            android:layout_toRightOf="@+id/txtHalt"
            android:hint="halt"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtHalt"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Distance: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtHalt"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/txtDistance"
            android:hint="distance"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHalt"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Day: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtTcode"
            android:layout_alignTop="@+id/txtDay"
            android:hint="Day"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txtTname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
           android:layout_below="@id/txtDay"
            android:fontFamily="sans-serif-condensed"
            android:text="Code: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtTname"
            android:layout_marginEnd="-8dp"
            android:layout_toStartOf="@+id/stationCode"
            android:hint="t code"
            android:textSize="20dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>